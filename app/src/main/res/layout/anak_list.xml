<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/child_layout">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <!-- TextView Nama Mahasiwa -->
                <ImageView
                    android:id="@+id/txt_foto"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="16dp"/>

                <!-- TextView Npm Mahasiswa -->
                <TextView
                    android:id="@+id/txt_nama"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/txt_foto"
                    android:textSize="30sp" />

                <!-- TextView NoHp Mahasiswa -->
                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/txt_nama"
                    android:layout_toRightOf="@+id/txt_foto" />

                <Button
                    android:id="@+id/btn_lakukanTest"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/txt_foto"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/button_general"
                    android:text="Lakukan Test"
                    android:textColor="@android:color/white" />

            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>